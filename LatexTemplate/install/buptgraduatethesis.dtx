% 否则保持原字符串不变。用于版本转换函数 convert.edition
% s 保存提取出的数字，t 保存剩余待扫描的字符串。
FUNCTION {extract.num} {
  duplicate$ 't :=            % t <- 输入字符串
  "" 's :=                    % s <- ""
  { t empty$ not }            % while( t != "" )
  { t #1 #1 substring$        %   tmp <- t[0]
    t #2 global.max$ substring$
    't :=                     %   t <- t[2:global.max$]
    duplicate$ is.num         %   if( is.num( tmp ) )
    { s swap$ * 's := }       %     s <- s & tmp
    { pop$ "" 't := }         %   else t <- ""
    if$
  }
  while$                      % if( s == "" )
  s empty$                    %   ;
  { skip$ }                   % else
  { pop$ s }                  %   return s
  if$
}

